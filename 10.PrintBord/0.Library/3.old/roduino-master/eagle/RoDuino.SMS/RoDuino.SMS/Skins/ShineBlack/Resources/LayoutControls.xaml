    <!-- Grid header with no size-->
    <Style x:Key="DataGridViewColumnHeaderNoSize" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Height" Value="0"/>
        <Setter Property="Width" Value="240"/>
        <Setter Property="Visibility" Value="Hidden"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="BorderBrush" Value="WhiteSmoke"/>
    </Style>

    <System:Double x:Key="StoryboardPopupFontSize">10</System:Double>
    <System:Double x:Key="StoryboardPopupTextboxWidth">203</System:Double>
    <System:Double x:Key="MenuWidth">600</System:Double>
    <System:Double x:Key="MenuHeight">100</System:Double>

    <Style x:Key="HeaderGridMenu" TargetType="{x:Type Grid}">
        <Setter Property="Focusable" Value="False"></Setter>
        <Setter Property="Background" Value="{StaticResource HeaderBrush}"></Setter>
        <Setter Property="Height" Value="{StaticResource MenuHeight}"></Setter>
        <Setter Property="ZIndex" Value="10"></Setter>
        <Setter Property="DockPanel.Dock" Value="Top"></Setter>
    </Style>

    <Style x:Key="GridContainerStyle" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="0, 2, 0, 0"></Setter>
    </Style>

